<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="103dp">
	<ImageView android:id="@+id/img" android:layout_width="72dp" android:layout_height="93dp" />

	<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="93dp" android:gravity="center_vertical">
		<TextView android:id="@+id/name" android:text="天龙八部" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FFFFFFFF" />
		<TextView android:id="@+id/type" android:text="武侠、动作" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FFFFFFFF" />
		<LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<RatingBar android:id="@+id/small_ratingbar"  style="?android:attr/ratingBarStyleSmall" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:numStars="8" />
			<TextView android:id="@+id/score" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FFFFFFFF" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
