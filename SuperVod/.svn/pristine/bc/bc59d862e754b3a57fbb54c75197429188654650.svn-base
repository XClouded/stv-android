<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:background="@drawable/homepage_top"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logo_top" >
        </ImageView>

        <TextView
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90dp"
            android:text="首页" />

        <Button
            android:id="@+id/regbutton"
            style="@style/Button"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:onClick="showLoginPage"
            android:text="@string/vod_register" />
    </LinearLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.stv.supervod.widget_extended.PosterGallery
                android:id="@+id/gallery"
                android:layout_width="fill_parent"
                android:layout_height="171dp" >
            </com.stv.supervod.widget_extended.PosterGallery>

            <Button
                android:id="@+id/today_hit_button"
                style="@style/TitleButton"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:drawableRight="@drawable/homepage_group_button_shrink"
                android:onClick="showtype"
                android:text="今日热播" />

            <ListView
                android:id="@+id/today_hit_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/latest_online_button"
                style="@style/TitleButton"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:drawableRight="@drawable/homepage_group_button_shrink"
                android:onClick="showtype"
                android:text="最新上线" />

            <ListView
                android:id="@+id/latest_online_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/home_theater_button"
                style="@style/TitleButton"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:drawableRight="@drawable/homepage_group_button_shrink"
                android:onClick="showtype"
                android:text="家庭影院" />

            <ListView
                android:id="@+id/home_theater_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/tv_playhouse_button"
                style="@style/TitleButton"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:drawableRight="@drawable/homepage_group_button_shrink"
                android:onClick="showtype"
                android:text="电视剧场" />

            <ListView
                android:id="@+id/tv_playhouse_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/top_singer_button"
                style="@style/TitleButton"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:drawableRight="@drawable/homepage_group_button_shrink"
                android:onClick="showtype"
                android:text="热门歌手" />

            <ListView
                android:id="@+id/top_singer_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                style="@style/TitleButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/homepage_group_button_shrink"
                android:onClick="showtype"
                android:text="高清影视"
                android:visibility="gone" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_bottom" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>