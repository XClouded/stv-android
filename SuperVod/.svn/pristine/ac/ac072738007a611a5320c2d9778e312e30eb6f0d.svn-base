<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/List_Layout" >

    <ImageView
        android:id="@+id/img"
        style="@style/List_Image" />

    <LinearLayout style="@style/List_Layout1" >

        <TextView
            android:id="@+id/name"
            style="@style/List_Movie_Name" />

        <LinearLayout style="@style/List_Layout2" >

            <TextView
                android:id="@+id/widget11"
                style="@style/List_Movie_Text" />

            <TextView
                android:id="@+id/type"
                style="@style/List_Movie_Type" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/List_RatingBar"
                android:rating="9.0" />

            <TextView
                android:id="@+id/ratingScore1"
                style="@style/Int_Score"
                android:text="9." />

            <TextView
                android:id="@+id/ratingScore2"
                style="@style/Float_Score"
                android:text="2" />

            <TextView style="@style/Text_Score" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>