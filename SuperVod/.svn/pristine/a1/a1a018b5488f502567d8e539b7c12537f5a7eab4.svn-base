<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="103dp"
    android:orientation="horizontal" 
    android:id="@+id/listitem" 
    android:paddingLeft="3dip">

    <ImageView 
        android:id="@+id/item_img"
		android:layout_width="72dp"
		android:layout_height="93dp"
		android:layout_centerHorizontal="true"
		android:layout_gravity="center" />
    <LinearLayout 
        android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="93dp"
		android:layout_centerVertical="true"
		android:layout_gravity="center"  
		android:paddingLeft="5dp"
		android:paddingTop="5dp" >
	 
		<TextView 
		    android:id="@+id/item_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@android:color/white"
		    android:textSize="20sp" />
		
		<LinearLayout 
	        android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="5dp" >
			<TextView android:id="@+id/widget11"
			    android:text="类型:"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="#333333"
			    android:textSize="17sp" />
			<TextView android:id="@+id/item_type"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="@android:color/white"
			    android:textSize="17sp" 
			    android:paddingLeft="5dp"/>
		</LinearLayout>
		
		<LinearLayout 
		    android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent">
			
		    <RatingBar   
				android:id="@+id/ratingBar"   
				android:layout_height="wrap_content"   
				android:layout_width="wrap_content" 
				android:paddingTop="8dp"
				android:isIndicator="true"
				android:numStars="10"
				android:rating="1.2"
				android:progressDrawable="@drawable/ratingbar_self" 
				android:minHeight="14dip"
				android:maxHeight="14dip"/>

		    <TextView
		        android:id="@+id/ratingScore1"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:gravity="top"
		        android:paddingLeft="3dp"
		        android:text="9."
		        android:textColor="#f88305"
		        android:textSize="25sp" />
		    <TextView 
		        android:id="@+id/ratingScore2"
		        android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_marginTop="5dp"
		        android:text="2"
		        android:textSize="12sp" 
		        android:textColor="#f88305" />
		    <TextView 
		        android:id="@+id/ratingScore2"
		        android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:gravity="center"
			    android:paddingLeft="3dp"
		        android:text="分"
		        android:textSize="12sp" 
		        android:textColor="@android:color/white"/>
		</LinearLayout>
		
	</LinearLayout>

</LinearLayout>