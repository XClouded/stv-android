<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem" 
    style="@style/List_Layout" >

    <ImageView 
        android:id="@+id/item_img"
		style="@style/List_Image" />
    
    <LinearLayout 
        style="@style/List_Layout1" >
	 
		<TextView 
		    android:id="@+id/item_name"
		    style="@style/List_Movie_Name" />
		
		<LinearLayout style="@style/List_Layout2" >
			<TextView android:id="@+id/widget11"
			    style="@style/List_Movie_Text" />
			<TextView android:id="@+id/item_type"
			    style="@style/List_Movie_Type" />
		</LinearLayout>

		<LinearLayout style="@style/List_Layout2" >
			<TextView style="@style/List_Movie_Time"
		    	android:id="@+id/item_time" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>