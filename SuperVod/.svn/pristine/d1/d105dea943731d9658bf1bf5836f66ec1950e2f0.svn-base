<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/mymtv_ll_title"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/homepage_top"
        android:gravity="left|center_horizontal" >

        <Button
            android:id="@+id/mymtv_btn_back"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="@string/detail_btn_back" 
            style="@style/Button_Return" 
			android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/mymtv_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mymtv_title"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:layout_marginLeft="30dp" 
            android:layout_gravity="center"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mymtv_ll_bar"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_below="@+id/mymtv_ll_title"
        android:layout_centerHorizontal="true" 
        android:background="@drawable/myvod_bg">

        <LinearLayout
            android:id="@+id/mymtv_ll_edit_bar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:gravity="center">

            <Button
                android:id="@+id/mymtv_btn_edit"
                style="@style/further_title_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/further_btn_edit" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mymtv_ll_setting_bar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:gravity="center" android:visibility="invisible">

            <Button
                android:id="@+id/mymtv_btn_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/myvod_repeat" android:layout_margin="10dp"/>

            <Spinner
                android:id="@+id/mymtv_spinner_repeat_count"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_up" android:layout_margin="10dp" android:layout_gravity="center"/>

            <Button
                android:id="@+id/mymtv_btn_editok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/further_btn_editok" 
                android:background="@drawable/btn_bg_myvod" 
                android:textColor="@android:color/white" android:layout_margin="10dp" android:textSize="18sp"/>

        </LinearLayout>

    </FrameLayout>
    
    <com.stv.supervod.widget_extended.ExListViewMyepg 
        android:id="@+id/mymtv_list" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/mymtv_ll_bar"
        android:drawSelectorOnTop="false" 
        android:fastScrollEnabled="false" />    
        
</RelativeLayout>