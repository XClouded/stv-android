<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:background="@drawable/channel_detail_title" android:gravity="center_vertical">


        <TextView
            android:id="@+id/further_textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/further_channel_title"
            android:textAppearance="?android:attr/textAppearanceLarge" android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <FrameLayout 
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" android:paddingTop="60dp">

	    <GridView
	        android:id="@+id/further_gridview"
			android:layout_height="fill_parent"
	        android:layout_width="wrap_content"
	        android:numColumns="2" 
	        android:stackFromBottom="false" 
	        android:gravity="center"
			android:verticalSpacing="15dp"/>

    </FrameLayout>
	
</RelativeLayout>