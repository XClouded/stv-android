<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:background="@drawable/channel_detail_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button"
            style="@style/Button"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:onClick="showRegPage"
            android:text="返回" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:text="@string/vod_register_reg"
            android:textSize="23sp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:shrinkColumns="0,1" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/reg_textview"
                android:text="@string/vod_username" />

            <EditText
                android:id="@+id/username"
                android:hint="请输入存在的邮箱账号"
                style="@style/reg_edittext" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/reg_textview"
                android:text="@string/vod_password" />

            <EditText
                android:id="@+id/password"
                style="@style/reg_edittext" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/reg_textview"
                android:text="@string/vod_confirm_password" />

            <EditText
                android:id="@+id/confirm_password"
                style="@style/reg_edittext" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/reg_textview"
                android:text="@string/vod_phone" />

            <EditText
                android:id="@+id/phone"
                style="@style/reg_edittext" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/reg_textview"
                android:text="@string/vod_id_number" />

            <EditText
                android:id="@+id/id_number"
                style="@style/reg_edittext" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/reg_textview"
                android:text="@string/vod_smartcard" />

            <EditText
                android:id="@+id/smartcard"
                style="@style/reg_edittext" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/reg_textview"
                android:text="@string/vod_service_password" />

            <EditText
                android:id="@+id/service_password"
                android:hint="若不存在，可不必填写"
                style="@style/reg_edittext" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                style="@style/Button"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:onClick="regist"
                android:text="@string/vod_commit" />
        </TableRow>
    </TableLayout>

</LinearLayout>