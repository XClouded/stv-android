<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical" android:background="@drawable/background">
		
	<RelativeLayout
			android:id="@+id/about_rl_title"
			android:layout_width="fill_parent"
			android:layout_height="43dp" 
			android:background="@drawable/homepage_top" >

			<Button
			    android:id="@+id/help_btn_back"
			    android:layout_width="68dp"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:text="@string/further_btn_back" 
			    android:layout_centerVertical="true" 
			    style="@style/Button_Return" 
			    android:layout_marginLeft="5dp"/>

			<TextView
            	android:id="@+id/detail_title_textView"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/further_help_title"
            	android:textAppearance="?android:attr/textAppearanceLarge" 
            	android:layout_centerInParent="true"/>
			
		</RelativeLayout> 

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="this is help page"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>