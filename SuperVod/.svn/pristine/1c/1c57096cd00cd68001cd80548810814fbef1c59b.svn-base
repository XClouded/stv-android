<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem" 
    style="@style/List_Layout" 
    android:layout_height="140dp" 
    android:background="@drawable/background">

    <ImageView 
        android:id="@+id/img"
		android:layout_width="70dp"
		android:layout_height="93dp"
		android:layout_marginTop="10dp" />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp" >
        
		<TextView 
		    android:id="@+id/item_name"
		    style="@style/List_Movie_Name" />
		
		<LinearLayout style="@style/List_Layout2" >
			<TextView android:id="@+id/widget11"
			    style="@style/List_Movie_Text" />
			<TextView android:id="@+id/item_type"
			    style="@style/List_Movie_Type" />
		</LinearLayout>
		
		<LinearLayout 
		    android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="30dp">
			
		    <RatingBar   
				android:id="@+id/ratingBar"   
				style="@style/List_RatingBar" 
				android:rating="2.0" />

		    <TextView
		        android:id="@+id/ratingScore1"
		        android:text="9."
		        style="@style/Int_Score"
		        android:layout_height="wrap_content" />
		    <TextView 
		        android:id="@+id/ratingScore2"
		        android:text="2"
		        style="@style/Float_Score" />
		    <TextView 
		        style="@style/Text_Score" 
		        android:layout_height="wrap_content" />
		</LinearLayout>
		
		<LinearLayout 
		    android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="30dp">
		    
		<Button 
		    android:id="@+id/btn_collect"
	        android:layout_width="70dp"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_poster_bar_selector"
	        android:drawableLeft="@drawable/poster_collect"
	        android:text="收藏"
	        android:textColor="@android:color/white" 
	        android:textSize="17sp" />
		
		<Button 
		    android:id="@+id/btn_channel"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:background="@drawable/poster_bar"
	        android:drawableLeft="@drawable/poster_collect"
	        android:layout_marginLeft="20dp"
	        android:text="我的频道"
	        android:textColor="@android:color/white" 
	        android:textSize="17sp"  />
		</LinearLayout>
		
	</LinearLayout>


</LinearLayout>