<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:background="@drawable/about_btn_bg_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button"
            style="@style/Button"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:onClick="showRegPage"
            android:text="返回" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:text="@string/vod_register_reg"
            android:textSize="8pt" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:shrinkColumns="0,1" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:text="@string/vod_username"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/username"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:text="@string/vod_password"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/password"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:text="@string/vod_confirm_password"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:text="@string/vod_email"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/email"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:text="@string/vod_phone"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:text="@string/vod_id_number"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/id_number"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:text="@string/vod_smartcard"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/smartcard"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:gravity="left" />
        </TableRow>
        
             <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:text="@string/vod_service_password"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/service_password"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:gravity="left" />
        </TableRow>
            

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                style="@style/Button"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:onClick="regist"
                android:text="@string/vod_commit" />
        </TableRow>
    </TableLayout>

</LinearLayout>