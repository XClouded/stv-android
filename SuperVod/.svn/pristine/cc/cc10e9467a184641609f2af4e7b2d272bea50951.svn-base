<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/homepage_top"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/Title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/vod_register_login" />
        <!--
        <Button
            style="@style/Button"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:onClick="showRegPage"
            android:text="@string/vod_regist" />
        -->
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vip_headicon_default" />
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:shrinkColumns="0,1" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/reg_textview"
                android:text="@string/vod_username" />

            <EditText
                android:id="@+id/username"
                style="@style/reg_edittext"
                android:hint="请输入智能卡号" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/reg_textview"
                android:text="@string/vod_password" >
            </TextView>

            <EditText
                android:id="@+id/password"
                style="@style/reg_edittext"
                android:hint="请输入手机号或业务密码"
                android:inputType="textPassword" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/reg_textview"
                android:text="@string/vod_password_type" >
            </TextView>

            <RadioGroup
                android:id="@+id/pwd_type"
                android:checkedButton="@+id/pwd_phone"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/pwd_phone"
                    android:text="@string/vod_phone" />

                <RadioButton
                    android:id="@+id/pwd_password"
                    android:text="@string/vod_service_password" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" >

            <Button
                style="@style/Button"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:onClick="login"
                android:text="@string/vod_login" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/remember_password"
                android:layout_width="160dp"
                android:layout_gravity="right"
                android:text="@string/vod_remember_password" />

            <CheckBox
                android:id="@+id/auto_login"
                android:layout_width="160dp"
                android:text="@string/vod_auto_login" />
        </TableRow>
    </TableLayout>

</LinearLayout>