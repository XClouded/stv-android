<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	android:id="@+id/widget62"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/background_new"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
<EditText 
	android:numeric="integer" 
	android:maxLength="16" 
	android:layout_width="282dp" 
	android:id="@+id/SmartCard" 
	android:password="true" 
	android:hint="请输入16位机顶盒智能卡卡号" 
	android:layout_x="17dp" 
	android:layout_y="220dp" 
	android:layout_height="50dp" />
<TextView 
	android:textStyle="bold" 
	android:layout_width="274dp" 
	android:text="智能卡号:" 
	android:textSize="20sp" 
	android:id="@+id/textView2" 
	android:layout_height="wrap_content" 
	android:layout_x="17dp" 
	android:layout_y="197dp" />
<EditText 
	android:maxLength="11" 
	android:inputType="phone" 
	android:layout_width="282dp" 
	android:id="@+id/PhoneNum" 
	android:layout_height="50dp" 
	android:hint="请输入11位手机号码" 
	android:layout_x="17dp" 
	android:layout_y="145dp">
    <requestFocus></requestFocus>
</EditText>
<TextView 
	android:textStyle="bold" 
	android:layout_width="261dp" 
	android:text="本机号码:" 
	android:textSize="20sp" 
	android:id="@+id/textView1" 
	android:layout_height="wrap_content" 
	android:layout_x="17dp" 
	android:layout_y="121dp" />
<ImageView 
	android:layout_width="wrap_content" 
	android:src="@drawable/logo" 
	android:id="@+id/widget57" 
	android:layout_height="wrap_content" 
	android:layout_x="42dp" 
	android:layout_y="37dp" />
<TextView 
	android:layout_width="150dp" 
	android:id="@+id/homepage_info" 
	android:gravity="center" 
	android:layout_height="30dp" 
	android:text="检测网络连接中..." 
	android:visibility="invisible" 
	android:textSize="14sp" 
	android:layout_x="90dp" 
	android:layout_y="350dp" />
<ProgressBar 
	android:layout_width="20dp" 
	android:id="@+id/homepage_progress" 
	android:layout_height="20dp" 
	android:visibility="invisible" 
	android:layout_x="225dp" 
	android:layout_y="356dp" />
<Button 
	android:textSize="15sp" 
	android:gravity="center" 
	android:id="@+id/login_button" 
	android:layout_width="61dp" 
	android:text="确定" 
	android:layout_height="wrap_content" 
	android:layout_x="132dp" 
	android:layout_y="286dp" />
</AbsoluteLayout>
